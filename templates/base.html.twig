<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		<link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg rounded shadow-sm">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto container-fluid">
					<div class="navbar">
						<li class="nav-item">
							<a class="nav-link fw-bold fs-5" href="{{ path('app_product_index') }}">Chez Renard !! ðŸ“¦ </a>
						</li>
					</div>
					{% if app.user %}
						<div class="navbar-nav">
							<li class="navbar-nav">
								<a class="nav-link" href="{{ path('app_cart') }}">Mon panier ðŸ›’</a>
								<a class="nav-link" href="{{ path('app_user_edit', {'id': app.user.id}) }}">Mon profil</a>
								<a class="nav-link" href="{{ path('app_logout') }}">Se dÃ©connecter</a>
							</li>
						{% else %}
							<li class="navbar-nav">
								<a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
								<a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
							</li>
						</div>
					{% endif %}
				</ul>
			</nav>
		</header>

		{# Parcours tous les types de msg flash #}
		{% for type, messages in app.flashes %}
			{# Parcours ensuite tous les msg au sein du type #}
			{% for m in messages %}
				<p class="alert alert-{{type}}">{{ m }}</p>
			{% endfor %}
		{% endfor %}

		{% block body %}{% endblock %}
	</body>
</html>

